<% include ../../partials/header.ejs %> <% include ../../partials/navbar.ejs %>
<% include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Edit Bank</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/bank/edit/<%= bank._id  %>?_method=PUT "
              method="POST"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Masukan Nama Pemilik</label>
                  <input
                    name="name"
                    value="<%= bank.name %>"
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Masukan Nama Pemilik"
                    required
                    autocomplete="off"
                  />
                </div>
                <div class="form-group">
                  <label for="nameBank">Masukan Nama Bank</label>
                  <input
                    name="nameBank"
                    value="<%= bank.nameBank %>"
                    type="text"
                    class="form-control"
                    id="nameBank"
                    placeholder="Masukan Nama Bank"
                    required
                    autocomplete="off"
                  />
                </div>
                <div class="form-group">
                  <label for="noRekening">Masukan Nomor Rekening</label>
                  <input
                    name="noRekening"
                    type="number"
                    class="form-control"
                    id="noRekening"
                    placeholder="Nomor Rekening Bank
                  BRI,BNI,Mandiri Dll"
                    required
                    autocomplete="off"
                    value="<%-
                  bank.noRekening %>"
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<% include ../../partials/footer.ejs %> <% include ../../partials/js.ejs %>
